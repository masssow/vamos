{% extends 'base-admin.html.twig' %}

{% block title %}Mission{% endblock %}

{% block body %}
    <h1>Mission</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mission.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ mission.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ mission.description }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ mission.imageName }}</td>
            </tr>
            <tr>
                <th>ImageSize</th>
                <td>{{ mission.imageSize }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ mission.updatedAt ? mission.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsBest</th>
                <td>{{ mission.isBest ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_mission_index') }}">back to list</a>

    <a href="{{ path('app_admin_mission_edit', {'id': mission.id}) }}">edit</a>

    {{ include('admin_mission/_delete_form.html.twig') }}
{% endblock %}
