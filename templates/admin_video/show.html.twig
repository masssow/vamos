{% extends 'base.html.twig' %}

{% block title %}Video{% endblock %}

{% block body %}
    <h1>Video</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ video.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ video.title }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ video.date ? video.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsBest</th>
                <td>{{ video.isBest ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ video.link }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_video_index') }}">back to list</a>

    <a href="{{ path('app_admin_video_edit', {'id': video.id}) }}">edit</a>

    {{ include('admin_video/_delete_form.html.twig') }}
{% endblock %}
