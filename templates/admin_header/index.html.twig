{% extends 'base.html.twig' %}

{% block title %}Header index{% endblock %}

{% block body %}
    <h1>Header index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>IsBest</th>
                <th>ImageName</th>
                <th>ImageSize</th>
                <th>UpdatedAt</th>
                <th>Title</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for header in headers %}
            <tr>
                <td>{{ header.id }}</td>
                <td>{{ header.isBest ? 'Yes' : 'No' }}</td>
                <td>{{ header.imageName }}</td>
                <td>{{ header.imageSize }}</td>
                <td>{{ header.updatedAt ? header.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ header.title }}</td>
                <td>{{ header.date ? header.date|date('d-m-Y') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_header_show', {'id': header.id}) }}">show</a>
                    <a href="{{ path('app_admin_header_edit', {'id': header.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_header_new') }}">Create new</a>
{% endblock %}
